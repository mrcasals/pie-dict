---
layout: none
---
[
  {% for lemma in site.pie_lemmas %}
    {% assign etymology = lemma.etymology %}
    {% assign content = lemma.lemma_to_sort | append: " " | append: lemma.klass | append: " " | append: etymology | append: " " | append: lemma.definitions %}
    {
      "title"    : "{{ lemma.title | escape }}",
      "category" : "{{ lemma.category }}",
      "tags"     : "{{ lemma.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ lemma.url }}",
      "content"  : {{ content | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
